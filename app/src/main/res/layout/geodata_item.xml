<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/geodataItemLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    style="@style/Divider8pStyle" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            style="@style/Divider8pStyle"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/geodataItemImg"
            android:contentDescription="@string/geodata_list_activity_img"
            android:layout_margin="@dimen/margin_20p"
            style="@style/ImageStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Divider8pStyle"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/geodataItemName"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/GeodataItemNameStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Divider8pStyle"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/geodataListItemIcon"
                    style="@style/TextIconStyle"
                    android:text="@string/ic_gps" />
                <TextView
                    android:id="@+id/geodataItemCoordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    <View
        android:id="@+id/geodataItemLine"
        style="@style/ViewLineStyle" />
</LinearLayout>